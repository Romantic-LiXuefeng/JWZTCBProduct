<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout 
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:orientation="vertical"

        android:layout_alignParentBottom="true"
        android:padding="10dp"
        >
        
        <EditText 
            android:id="@+id/ed_rename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/status_grey"
            android:maxLines="3"

            android:hint="重新命名"
            android:lines="3"
            android:paddingLeft="10dp"
            />
        
        
        <LinearLayout 
            android:id="@+id/ll_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            >
            
            <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_position_icon"
                />
            
            <TextView 
                android:id="@+id/tv_current_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置位置"
                android:textSize="15sp"
                android:textColor="@color/dark_theme_pressed"
                android:layout_marginLeft="10dp"
                
                />
            
        </LinearLayout>
        
        
        
        
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            >
            
            
            <LinearLayout 
                android:id="@+id/ll_save_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:background="#586897"
				android:gravity="center"
                >
            
                
                
            <TextView 
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:text="保存"
                />
            
            </LinearLayout>
            
            
            
            <LinearLayout 
                android:id="@+id/ll_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:background="#586897"
				android:gravity="center"
				android:layout_marginLeft="50dp"
                >
            
            <TextView 
                android:id="@+id/tv_right_btn"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:text="编辑"
                />
            
            </LinearLayout>
            
            
            
        </LinearLayout>
        
        
        
        
    </LinearLayout>
    
    
    

</RelativeLayout>