<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/top_menu_bar_height"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="@color/a5"
    android:clickable="true"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="44.0dip"
        android:layout_height="fill_parent"

        android:gravity="center_vertical" >
        
        <ImageView
        android:id="@+id/btn_take_picture_back"
        android:layout_width="23dp"
        android:layout_height="23dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_audio_record_back" />

    </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:gravity="center_vertical"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_weight="1.0"
           android:gravity="center_vertical|right"
           android:layout_height="match_parent">
<ImageView
        android:id="@+id/btn_flash_mode"
        android:layout_width="wrap_content"
        android:layout_height="30dp"


        android:contentDescription="@string/app_name"
        android:src="@drawable/btn_flash_off" />
       </LinearLayout>
    <ImageView
        android:id="@+id/btn_switch_camera"
        android:layout_width="44.0dip"
        android:layout_height="33dp"
        android:layout_weight="1.0"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_camera_top_bar_sw_camera" />

    

    <ImageView
        android:id="@+id/btn_other_setting"
        android:layout_width="44.0dip"
        android:layout_height="33dp"
        android:layout_weight="1.0"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_camera_top_bar_setting"
        android:visibility="invisible"
         />
   </LinearLayout>
</LinearLayout>