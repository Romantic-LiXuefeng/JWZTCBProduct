<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/new_bg_background"
    android:layout_width="395dp"
    android:layout_height="39dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_net"
        android:layout_marginLeft="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_net"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/relativeLayout2">
        <ImageView
            android:id="@+id/iv_count"
            android:layout_centerVertical="true"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/new_count"
            />

        <com.jwzt.caibian.view.FontTextView
            android:id="@+id/tv_time"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00: 00: 00"
            android:textColor="@color/whitecolor"
            android:textSize="15sp"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_ttery_100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ttery_100"
        android:layout_marginRight="22dp"
        android:layout_alignTop="@+id/iv_net"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_net"
        android:text="4G"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:textColor="#dddce3"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
