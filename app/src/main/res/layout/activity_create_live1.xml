<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_floder_press1"
    android:layout_height="match_parent">
    <include
        android:id="@+id/in_title"
        layout="@layout/my_head_layout"/>

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/title_style_right"
        android:layout_marginTop="@dimen/title_style_top"
        android:text="完成"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_style_text_size" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_below="@id/in_title"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/tv_live_show"
            android:text="直播主题："
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"

            style="@style/live_create"
            android:textColor="@color/greya1"

            />

        <EditText
            android:id="@+id/tv_theme"
            style="@style/live_create"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/tv_live_show"

            android:textColorHint="@color/grey_pressed1"
android:textColor="@color/grey_pressed1"
            android:background="@android:color/white"
            android:hint="请输入" />

        <View
            android:id="@+id/bar1"
            style="@style/live_create_bar"
            android:layout_below="@id/tv_theme" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@id/bar1"
    android:id="@+id/ll_start"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">
    <TextView
        style="@style/live_create"
        android:layout_width="wrap_content"
        android:textColor="@color/greya1"
        android:text="开始时间："
        />
        <com.jwzt.caibian.view.FontTextView
            android:id="@+id/tv_start"
            style="@style/live_create"


            android:drawableRight="@drawable/dark_grey_arrow"

            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/grey_pressed1"
            />
</LinearLayout>
        <View
            android:id="@+id/bar2"
            style="@style/live_create_bar"
            android:layout_below="@id/ll_start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/bar2"
            android:id="@+id/ll_end"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                style="@style/live_create"
                android:layout_width="wrap_content"
                android:textColor="@color/greya1"
                android:text="结束时间："
                />
        <com.jwzt.caibian.view.FontTextView
            android:id="@+id/tv_end"
            style="@style/live_create"

            android:drawableRight="@drawable/dark_grey_arrow"
            android:paddingRight="10dp"
            android:textColor="@color/grey_pressed1"
            android:text="" />
        </LinearLayout>
        <View
            android:id="@+id/bar3"
            style="@style/live_create_bar"
            android:layout_marginTop="5dp"
            android:layout_below="@id/ll_end" />
    </RelativeLayout>

</RelativeLayout>
