<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content" >
     <com.jwzt.caibian.view.FontTextView
        android:id="@+id/ftv_place_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/margin_standard"
        android:paddingRight="@dimen/margin_standard"
        android:paddingTop="5dp"
        android:text="取消"
        android:textColor="@color/lighter_black"
        android:textSize="15sp" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/ftv_place_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"  
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/margin_standard"
        android:paddingRight="@dimen/margin_standard"
        android:paddingTop="5dp"
        android:text="确定"
        android:textColor="@color/lighter_black"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@id/ftv_place_confirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <com.jwzt.caibian.widget.WheelView
            android:id="@+id/wheel_province"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <com.jwzt.caibian.widget.WheelView
            android:id="@+id/wheel_letter"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_weight="1" />

       
    </LinearLayout>
    <com.jwzt.caibian.view.FontTextView
      android:layout_below="@id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/margin_standard"
        android:paddingRight="@dimen/margin_standard"
        android:paddingTop="5dp"
        android:text="取消"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
    

</RelativeLayout>