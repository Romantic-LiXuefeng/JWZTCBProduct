<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <com.jwzt.caibian.widget.SwipeMenuLayout
        android:id="@+id/sml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ios="true"
        app:leftSwipe="true"
        app:swipeEnable="true" >

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/press_selector" >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="60dp">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_ringht"

                android:scaleType="fitXY"
                android:src="@drawable/replace" />

            <ImageView
                android:id="@+id/iv_flag"
                android:layout_width="37dp"
                android:layout_height="18dp"
                android:layout_alignLeft="@id/iv"
                android:layout_alignTop="@id/iv"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/tuigao"
                android:visibility="gone" />

            <com.jwzt.caibian.view.FontTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="2dp"
                android:text="待提交"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:textSize="10sp"
                android:textColor="@color/greybd" />

            <com.jwzt.caibian.view.FontTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="20dp"
android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/iv"
                android:ellipsize="end"
               android:maxLines="2"
                android:text="天津宁河区发生2.0级地震"
                android:textColor="@color/grey3"
                android:textSize="@dimen/main_body_title_text_size" />
<!-- android:singleLine="true"-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_alignParentBottom="true"
android:layout_marginBottom="2dp"
                android:layout_toRightOf="@id/iv">


                <com.jwzt.caibian.view.FontTextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:maxEms="5"
                    android:minEms="3"
                    android:textSize="11sp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/gj_pop"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/greybd" />

                <com.jwzt.caibian.view.FontTextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="6dp"
                    android:text="4月12日"
                    android:drawableLeft="@drawable/gj_time"
                    android:textSize="11sp"
                    android:drawablePadding="5dp"
                    android:layout_toRightOf="@id/tv_author"
                    android:textColor="@color/greybd" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="12dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/iv_type"
                        android:src="@drawable/newpaper"/>

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:text="报纸"
                        android:textColor="@color/greybd" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1dp"
                        android:visibility="gone"
                        android:src="@drawable/videoweibo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未播"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
            </RelativeLayout>




            <ImageView
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_left_ringht"
                android:visibility="gone"
                android:src="@drawable/grey_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:visibility="gone"
                android:layout_marginRight="16dp"
                android:background="#e3e3e3" />
        </RelativeLayout>
</RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/rl"
            android:layout_alignTop="@id/rl"
            android:visibility="gone"
            android:orientation="horizontal" >

            <com.jwzt.caibian.view.FontTextView
                android:id="@+id/tv_share"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="#c8c7cd"
                android:gravity="center"
                android:text="转发"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <com.jwzt.caibian.view.FontTextView
                android:id="@+id/tv_delete"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="#fe3c2e"
                android:gravity="center"
                android:text="删除"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </com.jwzt.caibian.widget.SwipeMenuLayout>

</RelativeLayout>