<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white" >

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_channel"
        style="@style/taskStyle"
        android:text="任务信息" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tv_channel"
        android:layout_marginTop="7dp"
        android:background="@color/bg_gray" />
<LinearLayout
    android:layout_width="match_parent"

android:id="@+id/ll_one_channel"
    android:layout_alignTop="@id/tv_one_channel"
    android:layout_toRightOf="@id/tv_one_channel"

    android:layout_height="wrap_content">
    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_one_channel"
        style="@style/taskStyle1"

        android:text="主    题:" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_channel_detail"
        style="@style/taskDetail"
        android:layout_width="wrap_content"

        android:ellipsize="end"
        android:maxLines="2"
        android:text="" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_alignTop="@id/tv_address"
        android:layout_toRightOf="@id/tv_address"
        android:id="@+id/ll_address"
        android:layout_height="wrap_content">
    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_address"
        style="@style/taskStyle1"
        android:layout_below="@id/tv_channel_detail"
        android:text="采访地址:" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_address_detail"
        style="@style/taskDetail"

        android:maxLines="1"
        android:text="" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_alignTop="@id/tv_date"

        android:layout_toRightOf="@id/tv_date"
        android:layout_height="wrap_content">
    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_date"
        style="@style/taskStyle1"
        android:layout_below="@id/tv_address_detail"
        android:text="采访日期:" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_date_detail"
        style="@style/taskDetail"

        android:maxLines="1"
        android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_submit"
        android:layout_alignTop="@id/tv_submit"
        android:layout_toRightOf="@id/tv_submit"

        android:layout_height="wrap_content">
    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_submit"
        style="@style/taskStyle1"
        android:layout_below="@id/tv_date_detail"
        android:text="交片日期:" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_submit_detail"
        style="@style/taskDetail"

        android:maxLines="1"
        android:text="" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_belong"
        android:layout_width="match_parent"
        android:layout_alignTop="@id/tv_belong"
        android:layout_toRightOf="@id/tv_belong"

        android:layout_height="wrap_content">
    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_belong"
        style="@style/taskStyle1"
        android:layout_below="@id/tv_submit_detail"
        android:text="所属栏目:"
        android:visibility="gone" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_belong_detail"
        style="@style/taskDetail"

        android:maxLines="1"
        android:text=""
        android:visibility="gone" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_create"
        android:layout_width="match_parent"
        android:layout_alignTop="@id/tv_create"
        android:layout_toRightOf="@id/tv_create"

        android:layout_height="wrap_content">
    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_create"
        style="@style/taskStyle1"
        android:layout_below="@id/tv_submit_detail"
        android:text="创 建 人:" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_create_detail"
        style="@style/taskDetail"

        android:maxLines="1"
        android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"

        android:id="@+id/ll_renwuxiangqing"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_renwuxiangqing"
        style="@style/taskStyle1"

        android:text="任务详情:" />

    <TextView
          android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"

        android:layout_marginLeft="25dp"
        android:lineSpacingExtra="25dp"
android:id="@+id/tv_renwuxiangqing_detail"
      
        android:text="sssss" />
    </LinearLayout>
</LinearLayout>