<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="15dp"
    android:layout_height="match_parent" >
 <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_time"
        style="@style/tvTimeStyle" />
    <com.jwzt.caibian.widget.CircleImageView
        android:id="@+id/civ"
        android:layout_below="@id/tv_time"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/chat_margin_top"
        android:src="@drawable/replace" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/civ"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/civ"
        android:text="欧阳娜娜"
        android:textColor="@color/grey3"
        android:textSize="16sp" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/civ"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/tv_name"
        android:text="新闻中心"
        android:textColor="#c8cbca"
        android:textSize="11sp" />
    <RelativeLayout 
        android:id="@+id/rl_audio"
        android:layout_width="160dp"
        android:layout_height="40dp"
         android:layout_below="@id/tv_group"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:layout_alignLeft="@id/tv_name"
        android:background="@drawable/bg_message_selector"
        >
        <ImageView 
            android:id="@+id/img_audioplay"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:background="@drawable/leftaudioplayanim"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
       
    </RelativeLayout>
    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_audiotime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10'"
            android:textColor="#bebebe"
            android:layout_toRightOf="@id/rl_audio"
			android:layout_alignTop="@id/rl_audio"
			android:layout_marginTop="10dp"
			            
             />
     <LinearLayout 
          android:id="@+id/ll_pop"
          android:layout_alignRight="@id/rl_audio"
          android:layout_marginTop="2dp"
          android:layout_width="160dp"
          android:layout_height="30dp"
          android:background="@drawable/big_pop"
           android:layout_alignTop="@id/tv_group"
          android:visibility="gone">
          <com.jwzt.caibian.view.FontTextView 
              android:id="@+id/tv_listen"
              android:text="听筒播放"
              android:textColor="@android:color/white"
              android:layout_width="0dp"  
              android:layout_weight="4"
              android:layout_marginTop="2dp"
              android:gravity="center"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:paddingTop="2dp"
              android:paddingBottom="2dp"
              />
          <View
              android:layout_width="0.5dp"
              android:layout_height="15dp"
              android:layout_marginTop="4dp"
              android:background="#9baac8"
               />
           <com.jwzt.caibian.view.FontTextView 
               android:id="@+id/tv_transer"
              android:text="转文字"
              android:layout_marginTop="2dp"
              android:gravity="center"
              android:textColor="@android:color/white"
              android:layout_width="0dp"
              android:layout_weight="3"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:paddingTop="2dp"
              android:paddingBottom="2dp"
              />
            <View
              android:layout_width="0.5dp"
              android:layout_height="15dp"
              android:layout_marginTop="4dp"
              android:background="#9baac8"
               />
           <com.jwzt.caibian.view.FontTextView 
               android:id="@+id/tv_select"
              android:text="选用"
              android:layout_marginTop="2dp"
              android:gravity="center"
              android:textColor="@android:color/white"
              android:layout_width="0dp"
              android:layout_weight="3"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:paddingTop="2dp"
              android:paddingBottom="2dp"
              />
      </LinearLayout>
    

</RelativeLayout>