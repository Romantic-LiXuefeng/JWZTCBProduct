<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
   >

  
    <RadioGroup
        android:id="@+id/rg_radios"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/index"
            style="@style/BottomTabStyle"
            android:checked="true"
            android:drawableTop="@drawable/tab_selector_a"
            android:text="首页" 
            
            />

        <RadioButton
            android:id="@+id/download"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/tab_selector_b"
            android:text="稿件" />

      

        <RadioButton
            android:id="@+id/campus"
            style="@style/BottomTabStyle"
            android:paddingTop="8dp"
            android:drawableTop="@drawable/tab_selector_d"
            android:text="素材" />

        <RadioButton
            android:id="@+id/mine"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/tab_selector_e"
            android:text="我的" />
    </RadioGroup>
    <View 
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/red_dot"
        android:layout_alignTop="@id/rg_radios"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        />
     <View 
         android:id="@+id/view_bar"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e9efef"
        android:layout_above="@id/rg_radios"
        />
      <FrameLayout 
          android:id="@+id/fl_content"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_above="@id/view_bar"
          >
       
       
   </FrameLayout>

</RelativeLayout>