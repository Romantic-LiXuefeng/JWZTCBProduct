<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_divider" >

    <include
        android:id="@+id/rl_title1"
        layout="@layout/headlayout3" />

    <EditText
        android:id="@+id/et_phone_num"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/rl_title1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_login_et"
        android:drawableLeft="@drawable/icon_user"
        android:drawablePadding="@dimen/margin_standard"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="@dimen/margin_standard"
        android:textColorHint="@color/light_grey"
        android:textSize="16sp" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_send"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignRight="@id/et_phone_num"
        android:layout_below="@id/et_phone_num"
        android:layout_marginTop="@dimen/margin_standard"
        android:background="@drawable/corner_5_red"
        android:gravity="center"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:text="发送验证码"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/et_phone_num"
        android:layout_below="@id/et_phone_num"
        android:layout_marginRight="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_toLeftOf="@id/tv_send"
        android:background="@drawable/bg_login_et"
        android:drawableLeft="@drawable/phone_register"
        android:drawablePadding="@dimen/margin_standard"
        android:hint="请输入验证码"
        android:paddingLeft="@dimen/margin_standard"
        android:phoneNumber="true"
        android:textColorHint="@color/light_grey"
        android:textSize="16sp" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_modify"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_code"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/corner_5_red"
        android:gravity="center"
        android:text="立即绑定"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>