<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/press_selector" >

    <com.jwzt.caibian.widget.RoundedImageView
        android:id="@+id/iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/mine_groupchat_logo"
        app:corner_radius="3dp" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_message_num"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/iv"
        android:background="@drawable/red_dot"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="8sp" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="21dp"
        android:text=""
        android:textColor="@color/greybd"
        android:textSize="10sp" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="21dp"
        android:layout_toLeftOf="@id/tv_time"
        android:layout_toRightOf="@id/iv"
        android:singleLine="true"
        android:text=""
        android:textColor="#030303"
        android:textSize="14sp" />

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/tv_time"
        android:layout_toRightOf="@id/iv"
        android:paddingBottom="21dp"
        android:singleLine="true"
        android:text=""
        android:textColor="#030303"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_bell"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_num"
        android:layout_marginRight="20dp"
        android:src="@drawable/bell" />

</RelativeLayout>