<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/press_selector" >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="30dp"
        android:background="@drawable/newsbutton_bg4"
        android:text="4"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_left_ringht"
        android:id="@+id/iv"
        android:textColor="@color/light_blue"
        android:layout_centerVertical="true"
        android:layout_height="30dp" />
    <LinearLayout
        android:layout_width="0dp"
android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_image_text_left_right"

        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:ems="10"
        android:singleLine="true"
        android:text="您的稿件上传成功"
        android:textColor="@color/ligntBlack"
        android:textSize="@dimen/main_body_title_text_size" />
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/ll"
android:layout_marginTop="3dp"
    android:layout_marginLeft="@dimen/margin_image_text_left_right"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"

        android:layout_marginBottom="18dp"

        android:layout_marginTop="@dimen/margin_text_text_top_bottom"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/gj_pop"/>
        <com.jwzt.caibian.view.FontTextView
            android:id="@+id/tv_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:ems="6"
            android:singleLine="true"
            android:text="12/23"
            android:textColor="@color/ligntGrey"
            android:textSize="@dimen/main_body_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:layout_marginBottom="18dp"
android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/margin_text_text_top_bottom"
        android:layout_height="wrap_content">

   <ImageView
       android:layout_width="wrap_content"
       android:src="@drawable/gj_time"
       android:layout_height="wrap_content" />
    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:ems="16"
        android:singleLine="true"
        android:text="12/23"
        android:textColor="@color/ligntGrey"
        android:textSize="@dimen/main_body_text_size" />
    </LinearLayout>
  <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="2"
      android:gravity="center_vertical"
      android:layout_marginBottom="18dp"
android:layout_marginRight="8dp"
      android:layout_marginTop="@dimen/margin_text_text_top_bottom"
      android:layout_height="wrap_content">
      <ImageView
          android:layout_width="wrap_content"
          android:src="@drawable/gj_tv"
          android:id="@+id/iv_tv"
          android:layout_height="wrap_content" />
      <com.jwzt.caibian.view.FontTextView
          android:id="@+id/tv_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:ellipsize="end"
          android:ems="6"

          android:singleLine="true"
          android:text="12/23"
          android:textColor="@color/ligntGrey"
          android:textSize="@dimen/main_body_text_size" />
  </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:gravity="center"


    android:layout_marginBottom="18dp"


    android:layout_marginTop="@dimen/margin_text_text_top_bottom"
    android:layout_height="wrap_content">
    <com.jwzt.caibian.view.FontTextView
        android:id="@+id/tv_huifu"
        android:layout_width="40dip"
        android:layout_height="20dip"

        android:textColor="@color/a5"
        android:textSize="12sp" />
</LinearLayout>

</LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/chuanliandan_san" />



</LinearLayout>
<View
android:layout_width="match_parent"
android:layout_height="0.5dp"
android:layout_below="@id/ll"
android:layout_marginLeft="14dp"
android:layout_marginRight="14dp"
android:layout_marginBottom="8dp"
android:visibility="gone"
android:background="@color/greyec" />
</LinearLayout>