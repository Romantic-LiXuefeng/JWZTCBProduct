<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.jwzt.caibian.activity.NotifyActivity">

    <include
        android:id="@+id/in_title"
        layout="@layout/my_head_layout" />
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_weight="1"
        android:layout_height="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="45dp"
                android:src="@drawable/shen2"
                android:id="@+id/iv"
                android:layout_height="45dp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="新的采访任务"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="11小时"
                android:textSize="9sp"

                android:textColor="@color/greyad"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:id="@+id/tv_title"
            android:layout_marginTop="10dp"

            android:text="新的采访任务"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/greyad"
                    android:textSize="11sp"
                    android:text="时间:"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/greyad"
                    android:textSize="11sp"
                    android:id="@+id/tv_time"
                    android:text="09/26 05:22"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/greyad"
                    android:textSize="11sp"
                    android:text="接收:"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/greyad"
                    android:textSize="11sp"
                    android:id="@+id/tv_jieshou"
                    android:text="09/26 05:22"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"


                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/greyad"
                    android:textSize="11sp"
                    android:text="发送:"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_send"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="09/26 05:22"
                    android:textColor="@color/greyad"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <WebView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_pre"
        android:lineSpacingExtra="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="23dp"
        android:textColor="#818181"
        android:textSize="17sp" />

    </LinearLayout>

    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#F85530"
            android:text="退回"
            android:id="@+id/tv_tuihui"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_height="45dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="认领"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_renling"
            android:textSize="13sp"
            android:background="#5BB5DA"
            android:layout_height="45dp" />
    </LinearLayout>
</LinearLayout>
