<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/press_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView 
        android:id="@+id/iv"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:src="@drawable/new_pass_back_display"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_left_ringht"
        
        />
    <com.jwzt.caibian.view.FontTextView 
        android:id="@+id/tv_title"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text=""
        android:layout_toRightOf="@id/iv"
        android:layout_marginLeft="@dimen/margin_image_text_left_right"
        android:textSize="@dimen/main_body_title_text_size"
        />
    <ProgressBar 
        android:visibility="gone"
       android:id="@+id/pb"
       android:layout_width="match_parent"
       android:layout_height="2dp"
       style="?android:attr/progressBarStyleHorizontal" 
        android:max="100" 
        android:progress="50" 
        android:layout_toRightOf="@id/iv"
        android:layout_marginTop="11dp"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"
        android:progressDrawable="@drawable/mprogress_drawable_grey"
        />
    <com.jwzt.caibian.view.FontTextView 
         android:id="@+id/tv_status"
         android:layout_width="wrap_content"
       	 android:layout_height="wrap_content"
         android:textColor="#232323"
         android:textSize="@dimen/main_body_text_size"
         android:layout_toRightOf="@id/iv"
         android:layout_below="@id/pb"
         android:layout_marginTop="6dp"
         android:text=""
         android:paddingBottom="11dp"
         android:layout_marginLeft="@dimen/margin_image_text_left_right"
        />
     <com.jwzt.caibian.view.FontTextView 
         android:visibility="gone"
         android:id="@+id/tv_size"
         android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="9sp"
       android:layout_alignRight="@id/pb"
        android:layout_below="@id/pb"
        android:layout_marginTop="6dp"
        android:text="00.0M"
        android:textColor="#232323"
        />
     
     <RelativeLayout 
         android:layout_width="34dp"
         android:layout_height="34dp"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:layout_marginRight="@dimen/margin_left_ringht"
         >
         
	      <com.jwzt.caibian.view.CircleProgressView
	        android:id="@+id/pro"
	        android:clickable="true"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        app:bgColor="#999"
	        app:progressColor="#1983d1"
	        app:radius = "15dip"
	        app:strokeWidth = "2dip"
	       />
	      
	      <ImageView 
	          android:visibility="gone"
	          android:id="@+id/iv_scchenggong"
	          android:layout_width="match_parent"
	          android:layout_height="match_parent"
	          android:background="@drawable/scchenggong"/>
	      
	      <ImageView 
	          android:visibility="gone"
	          android:id="@+id/iv_scshibai"
	          android:layout_width="match_parent"
	          android:layout_height="match_parent"
	          android:background="@drawable/scshibai"/>
	      
	      <ImageView 
	          android:padding="10dp"
	          android:clickable="true"
	          android:visibility="gone"
	          android:id="@+id/iv_sczt"
	          android:layout_width="match_parent"
	          android:layout_height="match_parent"
	          android:src="@drawable/sczt"/>
	      
	      <ImageView 
	          android:visibility="gone"
	          android:id="@+id/iv_scdengdai"
	          android:layout_width="match_parent"
	          android:layout_height="match_parent"
	          android:background="@drawable/scdengdai"/>
         
     </RelativeLayout>
     
     

</RelativeLayout>
